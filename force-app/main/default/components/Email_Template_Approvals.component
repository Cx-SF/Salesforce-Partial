    <style>
       .outBorder {
    border:3px outset black;
   }
   .inBorder{
    border-top:0.5px solid   black;
    border-left:0.5px solid   black;
   }
        .HClass {align:left !important;}
        .Custom11Tab .bPageBlockÂ { border-color:white;}
        .Custom11Tab .secondaryPalette
    </style>
    <apex:attribute name="QuoteIdET"      type="String" description="Junction object name"  assignTo="{!ParentId}" />
    <apex:attribute name="ApprovalIdET"   type="String" description="Table's Columns"       assignTo="{!ApprovalId}"/>
    <apex:attribute name="ObjectName"     type="String" description="Table's Columns"       assignTo="{!ObjToDisplay}"/>
    <apex:attribute name="fieldSetName"   type="String" description="Table's Columns"       assignTo="{!fSetName}"/>
    <apex:attribute name="ObjectRefName"  type="String" description="Reference object name" assignTo="{!referenceName}" />
    
    
    <apex:dataTable id="documentsTable" value="{!RecordsToDisplay}" var="prod"   styleclass="outBorder" headerClass="HClass" 
                    style="align:left;font-size:13px;border-collapse: collapse ; border-width:thin;border-style:solid;width:80%;border-color:gray;background-color:#9fd9fc; color: black;" >
        
        <apex:repeat value="{!fsList}" var="fieldValue">
            <apex:column headerValue="{!fieldValue.Label}" styleclass="inBorder" rendered="{!IF((fieldValue.Type == 'currency' || fieldValue.Type == 'date'),'false','true')}" style="align:center !important;background-color: #FFFFFF; color: #000000 ">
                <apex:outputtext value="{!prod[fieldValue]}"  styleClass="slds-output" /> 
            </apex:column>
            
            <apex:column headerValue="{!fieldValue.Label}" styleclass="inBorder" rendered="{!IF(fieldValue.Type == 'currency','true','false')}" style="background-color: #FFFFFF; color: #000000">
                 {!IF(prod[fieldValue] != null,'$','')}
                <apex:outputtext value="{0, number, ###,###,###,##0}" styleClass="slds-output" style="text-align:right" >
                    <apex:param value="{!prod[fieldValue]}"/>
                    </apex:outputtext> 
               
                </apex:column>
                
                <apex:column headerValue="{!fieldValue.Label}" styleclass="inBorder" rendered="{!IF(fieldValue.Type == 'date','true','false')}" style="background-color: #FFFFFF; color: #000000">
             <apex:outputText value="{0,date,MM'/'dd'/'yyyy}">
            <apex:param value="{!prod[fieldValue]}" /> 
               </apex:outputText>
                </apex:column>
                
            </apex:repeat>
            
        </apex:dataTable>

    <!---table value="{!RecordsToDisplay}" var="prod"  >
        <apex:repeat value="{!fsList} " var="fieldValue">
            <tr style="display: {!IF(fieldValue.Type == 'currency','','none')}"><tr>
                        <td class="QuoteLineTableRow" style="border-bottom: thin solid; border-left: thin solid;" ></td>
                        
                    </tr>
        </apex:repeat>
    </table---->
        
    </apex:component>